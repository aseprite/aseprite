<!-- Aseprite -->
<gui>
  <window id="stroke_dialog" text="@stroke_dialog.title">
    <vbox>
      <grid columns="2" rows="4" pad="8">
        <label text="@stroke_dialog.width" />
        <entry id="width" type="number" maxsize="256" minwidth="64" value="1" minValue="1" />

        <label text="@stroke_dialog.color" />
        <colorpicker id="color" />


        <label text="@stroke_dialog.location" />
        <hbox colspan="2">
          <radio id="inside" text="@stroke_dialog.inside" group="1" selected="true" />
          <radio id="center" text="@stroke_dialog.center" group="1" />
          <radio id="outside" text="@stroke_dialog.outside" group="1" />
        </hbox>
      </grid>

      <hbox>
        <boxfiller />
        <hbox homogeneous="true">
          <button text="@general.ok" closewindow="true" id="ok" magnet="true" minwidth="60" />
          <button text="@general.cancel" closewindow="true" id="cancel" />
        </hbox>
      </hbox>
    </vbox>
  </window>
</gui>